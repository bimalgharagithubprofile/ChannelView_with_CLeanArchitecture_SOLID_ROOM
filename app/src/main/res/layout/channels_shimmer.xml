<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/_126sdp"
    android:layout_height="@dimen/_200sdp"
    android:layout_margin="@dimen/_5sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:id="@+id/vChannel"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_30sdp"
        android:background="?attr/colorOnSurface"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/vMedia"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <View
        android:id="@+id/vMedia"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="?attr/colorOnSurface"
        android:layout_marginTop="@dimen/_3sdp"
        app:layout_constraintTop_toBottomOf="@+id/vChannel"
        app:layout_constraintBottom_toTopOf="@+id/vTitle1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <View
        android:id="@+id/vTitle1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_20sdp"
        android:background="?attr/colorOnSurface"
        android:layout_marginTop="@dimen/_3sdp"
        app:layout_constraintTop_toBottomOf="@+id/vMedia"
        app:layout_constraintBottom_toTopOf="@+id/vTitle2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <View
        android:id="@+id/vTitle2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_20sdp"
        android:background="?attr/colorOnSurface"
        android:layout_marginTop="@dimen/_3sdp"
        app:layout_constraintTop_toBottomOf="@+id/vTitle1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>